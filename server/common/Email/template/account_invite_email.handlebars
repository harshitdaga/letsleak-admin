<template name="AccountInvite">
    <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>LetsLeak - Invitation</title>
        <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1.0, user-scalable=0">
        <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
        <style type="text/css">
            @media only screen and (min-device-width: 320px) and (max-device-width: 600px) {
                h2 {
                    font-size: 20px;
                    font-weight: bold;
                }
                p {
                    font-size: .8em;
                }
            }
            @media only screen and (min-device-width: 767px) {
                h2 {
                    font-size: 1.2em;
                }
            }
            a{
                text-decoration: none;
            }
        </style>
    </head>
    <body>
    <table width="90%" border="0" cellpadding="0" cellspacing="0" style="margin:20px auto; background-color:#ffffff;max-width: 660px;">
        <tr>
            <td align="center">
                <table cellspacing="0" cellpadding="0" border="0">
                    <tr>
                        <td>
                            <a href="{{this.url}}">
                                <div style="margin-top:10px;"><img src="{{this.url}}/images/letsleak_logo.png" width="37" height="84" alt=""></div>
                            </a>
                        </td>
                        <td>
                            <a href="{{this.url}}">
                                <div style="display:inline-block;font-family: 'Lato', sans-serif; font-weight: 400; font-size:60px; font-weight:bold; color:#3c3c3c;">LetsLeak<img src="{{this.url}}/images/tag-line.jpg" style="margin-top: -10px;display: block;"/></div>
                            </a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="background-image: url('{{this.url}}/images/letsleak_logo_divider.png'); background-repeat: no-repeat; background-position: center;" height="30"></td>
        </tr>
        <tr>
            <td colspan="2" style="font-family: 'Lato', sans-serif;">
                <div style="font:30px; font-weight:bold; margin:20px auto; width:90%">how-<span style="color:#198ad1;">d'ye-do!</span></div>
                <div style="line-height:26px; width:90%; margin:10px auto;">You recently requested an invite at LetsLeak. We would like you to be a part of the LetsLeak community. To proceed, click Create Account.</div>

                <div style="line-height:26px; width:90%; margin:30px auto; text-align:center;"> <a href="{{this.url}}/createAccount/{{this.inviteCode}}" target="_blank" alt="Create account" style="outline:none; text-decoration:none;"><img src="{{this.url}}/images/letsleak_mail_createacc_button.png" width="262" height="56" alt=""></a> <br>
                    <img src="{{this.url}}/images/letsleak_mail_button_shadow.png" width="262" height="22" alt="">
                    <p style="font-size:11px; padding:10px; margin-bottom:20px; width:90%; margin-left:2%; margin:10px auto">
                        If above link does not open, please paste the below link in your browser
                        <a target="_blank" href="{{this.url}}/createAccount/{{this.inviteCode}}">{{this.url}}/createAccount/{{this.inviteCode}}</a>
                    </p>
                </div>

                <div style="line-height:26px; width:90%; margin:10px auto;">Cheers!<br>
                    Team LetsLeak
                </div>
                <div style="font-size:11px; color:#a6a6a6;padding:10px; margin-bottom:20px; width:90%; margin-left:2%; margin:10px auto"> PS: We strongly recommend you to visit our <a target="_blank" href="{{this.url}}/GroundRules">Ground Rules</a> and <a target="_blank" href="{{this.url}}/FAQs">FAQs</a>.</div>
                <hr style="border-top:1px solid #b1b1b1; width:95%; margin:10px auto;"/>
                <div style="font-size:11px; color:#a6a6a6;padding:10px; margin-bottom:20px; width:90%; text-align:center"> This is a system generated email. Please do not reply to this mail.</div>
        </tr>
    </table>
    </body>
    </html>
</template>